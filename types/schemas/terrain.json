{
  "$id": "https://raw.githubusercontent.com/Codename-Recon/Codename-Recon/types/master/schemas/terrain.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Terrain",
  "type": "object",
  "properties": {
    "name": { "$ref": "./enum.json#/definitions/terrain" },
    "description": { "type": "string" },
    "type": {
      "type": "integer",
      "description": "Uses index of enum/terrain as an id reference.",
      "minimum": 0,
      "maximum": 16
    },
    "defense": { "type": "integer", "minimum": 0, "maximum": 4 },
    "health": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "can_capture": {
      "type": "boolean"
    },
    "capture_value": {
      "type": "integer",
      "description": "Current status of capture by Infantry or Mech.",
      "minimum": 0,
      "maximum": 20
    },
    "owner": {
      "type": "integer",
      "description": "0 = neutral, all other numbers coorespond to player number",
      "minimum": 0
    },
    "ammo": {
      "type": "integer",
      "description": "Primarily used for missile silos",
      "minimum": 0
    }
  },
  "required": [
    "name",
    "description",
    "terrain",
    "defense",
    "health",
    "can_capture",
    "capture_value",
    "owner",
    "ammo"
  ]
}
