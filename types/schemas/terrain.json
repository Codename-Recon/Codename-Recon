{
  "$id": "https://raw.githubusercontent.com/Codename-Recon/Codename-Recon/master/types/schemas/terrain.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Terrain",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "./enum.json#/definitions/terrain"
    },
    "description": { "type": "string" },
    "type": {
      "type": "integer",
      "description": "Uses index of enum/terrain as an id reference.",
      "minimum": 0,
      "maximum": 16
    },
    "defense": { "type": "integer", "minimum": 0, "maximum": 4 },
    "health": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "can_capture": {
      "type": "boolean"
    },
    "capture_value": {
      "type": "integer",
      "description": "Current status of capture by Infantry or Mech.",
      "minimum": 0,
      "maximum": 20
    },
    "funds": {
      "type": "integer",
      "description": "Funds provided to owner per turn.",
      "minimum": 0
    },
    "ammo": {
      "type": "integer",
      "description": "Primarily used for missile silos",
      "minimum": 0
    },
    "shop_units": {
      "type": "array",
      "description": "Array with units that can be bought with this property"
    }
  },
  "required": [
    "name",
    "description",
    "terrain",
    "defense",
    "health",
    "can_capture",
    "capture_value",
    "owner",
    "ammo",
    "shop_units"
  ]
}
